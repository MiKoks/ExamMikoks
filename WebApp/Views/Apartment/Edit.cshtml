@model ApartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApartmentVmodel.PropertyId" class="control-label"></label>
                <select asp-for="ApartmentVmodel.PropertyId" class="form-control" asp-items="Model.PropertySelectList"></select>
                <span asp-validation-for="ApartmentVmodel.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentVmodel.FloorNumber" class="control-label"></label>
                <input asp-for="ApartmentVmodel.FloorNumber" class="form-control" />
                <span asp-validation-for="ApartmentVmodel.FloorNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentVmodel.RoomCount" class="control-label"></label>
                <input asp-for="ApartmentVmodel.RoomCount" class="form-control" />
                <span asp-validation-for="ApartmentVmodel.RoomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentVmodel.MonthlyRent" class="control-label"></label>
                <input asp-for="ApartmentVmodel.MonthlyRent" class="form-control" />
                <span asp-validation-for="ApartmentVmodel.MonthlyRent" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ApartmentVmodel.Status" /> @Html.DisplayNameFor(model => model.ApartmentVmodel.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentVmodel.CurrentLeaseId" class="control-label"></label>
                <select asp-for="ApartmentVmodel.CurrentLeaseId" class="form-control" asp-items="Model.LeaseSelectList"></select>
                <span asp-validation-for="ApartmentVmodel.CurrentLeaseId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ApartmentVmodel.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
